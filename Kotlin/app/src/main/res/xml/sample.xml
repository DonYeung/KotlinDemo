<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start"
        app:duration="3000">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/motext1" />
        <!--<OnSwipe app:touchAnchorId="@id/motext1" app:dragDirection="dragDown"
            />-->

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                android:rotation="360"
                android:scaleX="2"
                android:scaleY="2"
                app:framePosition="50"
                app:motionTarget="@id/motext1"></KeyAttribute>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="parentRelative"
                app:motionTarget="@id/motext1"
                app:percentX="0.45"
                app:percentY="0.3" />
            <!--<KeyCycle
                app:framePosition="0"
                app:motionTarget="@id/motext1"
                app:wavePeriod="0"
                android:rotation="0"
                app:waveShape="sin" />
            <KeyCycle
                app:framePosition="50"
                app:motionTarget="@id/motext1"
                app:wavePeriod="3"
                android:rotation="45"
                app:waveShape="sin" />
            <KeyCycle
                app:framePosition="100"
                app:motionTarget="@id/motext1"
                android:rotation="0"

                app:wavePeriod="0"
                app:waveShape="sin" />-->
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.8"
                android:rotation="180"
                android:scaleX="1.4"
                android:scaleY="1.4"
                app:framePosition="80"
                app:motionTarget="@id/motext2"></KeyAttribute>
            <KeyPosition app:drawPath="pathRelative" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/motext1">
            <Motion app:pathMotionArc="startVertical" />

            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="104dp"
                android:text="H"
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </Constraint>


        <Constraint android:id="@+id/motext2">
            <Motion app:pathMotionArc="none" />

            <Layout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="E"
                android:textSize="32dp"
                app:layout_constraintStart_toEndOf="@+id/motext1"
                app:layout_constraintTop_toTopOf="@+id/motext1" />
        </Constraint>

        <Constraint android:id="@+id/motext3">
            <Motion app:pathMotionArc="flip" />

            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="N"
                android:textSize="32dp"
                app:layout_constraintStart_toEndOf="@+id/motext2"
                app:layout_constraintTop_toTopOf="@+id/motext1" />
        </Constraint>
    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/motext1">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="454dp"
                android:text="H"
                android:textSize="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </Constraint>
        <Constraint android:id="@+id/motext2">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="E"
                android:textSize="32dp"
                app:layout_constraintStart_toEndOf="@+id/motext1"
                app:layout_constraintTop_toTopOf="@+id/motext1" />


        </Constraint>
        <Constraint android:id="@+id/motext3">
            <Layout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="N"
                android:textSize="32dp"
                app:layout_constraintStart_toEndOf="@+id/motext2"
                app:layout_constraintTop_toTopOf="@+id/motext1" />


        </Constraint>
    </ConstraintSet>
</MotionScene>