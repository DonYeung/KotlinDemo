<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/showTextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" show text"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/loadPluginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" load plugin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showTextBtn" />

    <Button
        android:id="@+id/removePluginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" remove plugin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loadPluginBtn" />

    <Button
        android:id="@+id/killSelfBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" kill self"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/removePluginBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>