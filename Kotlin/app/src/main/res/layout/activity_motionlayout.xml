<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    app:showPaths="true"
    app:layoutDescription="@xml/sample">

    <TextView
        android:id="@+id/motext1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="104dp"
        android:text="H"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/motext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="E"
        android:textSize="32dp"
        app:layout_constraintStart_toEndOf="@+id/motext1"
        app:layout_constraintTop_toTopOf="@+id/motext1" />

    <TextView
        android:id="@+id/motext3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="N"
        android:textSize="32dp"
        app:layout_constraintStart_toEndOf="@+id/motext2"
        app:layout_constraintTop_toTopOf="@+id/motext1" />
</androidx.constraintlayout.motion.widget.MotionLayout>